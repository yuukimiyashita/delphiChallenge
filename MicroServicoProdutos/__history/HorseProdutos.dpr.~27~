
program HorseProdutos;


{$APPTYPE CONSOLE}

{$R *.res}

uses
  Horse,
  Windows,
  Horse.Jhonson,
  Controller.Produto in 'Controller\Controller.Produto.pas',
  Model.Connection in 'Model\Model.Connection.pas',
  Model.Produtos in 'Model\Model.Produtos.pas';

begin
  THorse.Use(Jhonson());
  Controller.Produto.Registry;

  THorse.Listen(9000);

  // Manter a aplicação viva, mesmo em modo GUI
  while True do
    Sleep(1000); // Espera de 1 segundo em loop infinito
end.
