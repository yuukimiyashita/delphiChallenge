
program HorseNotas;


{$APPTYPE console}

{$R *.res}

uses
  Horse,
  Windows,
  Horse.Jhonson,
  Model.Connection in 'Model\Model.Connection.pas',
  Model.Notas in 'Model\Model.Notas.pas',
  Controller.Nota in 'Controller\Controller.Nota.pas';

begin
  THorse.Use(Jhonson());
  Controller.Nota.Registry;

  THorse.Listen(9000);

  // Manter a aplicação viva, mesmo em modo GUI
  while True do
    Sleep(1000); // Espera de 1 segundo em loop infinito
end.
